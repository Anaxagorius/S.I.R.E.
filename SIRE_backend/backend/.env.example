# Server Configuration
PORT=8080
NODE_ENV=development

# Logging
LOG_LEVEL=debug

# Session Management
SESSION_MAX_TRAINEES=10
# Comma-separated list of allowed origins for CORS
# Use '*' for development (allows all origins)
# For production, specify exact origins (e.g., https://sire.example.com,http://localhost:3000)
ALLOWED_ORIGINS=*

# Security & Authentication
API_KEY=your-secure-api-key-here
REQUIRE_API_KEY=true
API_KEY_HEADER=x-api-key

# Ticket Tracking (for change management)
TICKET_HEADER=x-ticket-id
REQUIRE_TICKET_ID=false

# Audit Logging
AUDIT_LOG_ENABLED=true
CODEBASE_CONTEXT=SIRE_backend
REQUEST_ID_HEADER=x-request-id

# Socket.IO Authentication
SOCKET_API_KEY_HEADER=x-api-key
